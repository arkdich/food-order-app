{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:@next/next/recommended",
    "plugin:react/jsx-runtime",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "jest/expect-expect": "off",
    "jest/no-focused-tests": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
